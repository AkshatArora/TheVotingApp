<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
   
  </head>
  <body>
    <div style="margin:150px 0px -10px 200px;font-size:20px" ><%= data[0].title %></div>
    <div id = "option" style="margin:150px 0px 0px 0px;font-size:20px;visibility:hidden;"><%= data[0].options %></div>
    <div id="donutchart" style="width: 900px; height: 500px;">
      <div id="test"></div>
    </div>
     <script type="text/javascript">
 
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawChart);
  
      function drawChart() {
             var opt = document.getElementById('option')
    var op = String(opt.innerHTML);
      var dataarr = [];
      dataarr.push(['Options', 'Votes']);
   
     var arr = op.split('\n')
   var b = [];
   var i;
    for ( i =0;i<Object.keys(arr).length;i++)
    b.push(1)
   for ( i =0;i<Object.keys(arr).length;i++)
   { dataarr.push([arr[i],b[i]])
}
var data = google.visualization.arrayToDataTable(dataarr);

        var options = {
          title: '',
          pieHole: 0.4,
        };

        var chart = new google.visualization.PieChart(document.getElementById('donutchart'));
        chart.draw(data, options);
      }
    </script>
  </body>
</html>
